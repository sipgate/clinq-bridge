	"license": "Apache-2.0",
	"scripts": {
		"test": "jest",
		"compile": "tsc",
		"build": "yarn lint && yarn test && rimraf dist && yarn compile",
		"lint": "tslint 'src/**/*.ts'",
		"precommit": "lint-staged",
		"prepublishOnly": "yarn build"
	},
	"lint-staged": {
		"*.{ts,json}": [
