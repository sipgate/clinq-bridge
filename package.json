		"transform": {
			"^.+\\.ts?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
		"moduleFileExtensions": [
			"js",
			"ts",
			"json",
			"node"
		]
	},
	"devDependencies": {
		"@types/body-parser": "^1.17.0",
