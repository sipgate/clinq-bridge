{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"strict": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "src/**/*.test.ts"]
}
